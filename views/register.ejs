<%- include("header") -%>

  <div class="login-box" id="register-form">
    <h2 class="login-title" id="register-title">Register</h2>

    <form class="login-form" action="/register" method="post">
      <p class="registerError"><%= registerError %></p>
      <input class="form-input" id="name" type="text" name="name" placeholder="username" required>
      <input class="form-input" id="email" type="email" name="username" placeholder="email" required>
      <input class="form-input" id="password" type="password" name="password" placeholder="password" required>
      <button class="form-input" id="register-button" type="submit" name="button">Register</button>

    </form>

    <span class="already options">Already Registered?</span>
    <a class="register options" href="/login">Log In</a>

  </div>

<%- include("footer") -%>
